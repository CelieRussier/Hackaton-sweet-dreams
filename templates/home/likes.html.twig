{% extends 'base.html.twig' %}

{% block title %}My matches - {% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row p-4">
            <div class="col-12">
                <h2 class="text-center text-white">My matches</h2>
            </div>
        </div>
    </div>
    <div class="container mb-5">
        <div class="row">
            <div class="col-12 d-flex flex-column align-items-center gap-4">

                {% for project in projects %}

                    <div class="card card-like animate__animated animate__fadeInRight shadow" style="max-width: 700px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <a href="{{ path('app_project_show', {'id': project.project.id}) }}">
                                    <img src="{{ asset(project.project.picture) }}"
                                         class="img-fluid rounded-start card-like-pic" alt="...">
                                </a>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <a class="delete-like-show"
                                       href="{{ path('app_home_dislike_project_from_like', {'id': project.id}) }}">Ã—</a>
                                    <a href="{{ path('app_project_show', {'id': project.project.id}) }}">
                                        <h5 class="card-title">{{ project.project.title }}</h5>
                                    </a>
                                    <p class="card-text">
                                        <small class="text-muted">{{ project.project.agency }}</small>
                                    </p>
                                    <p class="card-text">Field: {{ project.project.topic }}</p>
                                    <p class="card-text">{{ project.project.description }}</p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            {% for techno in project.project.techno %}
                                                #{{ techno }}
                                            {% endfor %}
                                        </small>
                                    </p>
                                    {% if project.project.meeting %}
                                        <p class="card-text">Meeting scheduled: {{ project.project.meeting }}</p>
                                    {% else %}
                                        <p class="card-text">Meeting: TBD!</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    </a>
                {% else %}
                    <p class="text-white">Nothing to display.</p>
                {% endfor %}

            </div>
        </div>

