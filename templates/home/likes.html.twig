{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row p-4">
            <div class="col-12">
                <h2 class="text-center text-white">Mes likes</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex flex-column align-items-center gap-4">

                {% for i in 0..5 %}
                    <a href="#" class="card-like">
                        <div class="card shadow" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ asset('build/images/project.jpg') }}"
                                         class="img-fluid rounded-start card-like-pic" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
